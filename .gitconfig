[core]
    excludesfile = "~/.gitignore"
    editor = vim

[user]
    name = Simon Percivall
    # specified by GIT_COMMITTER_EMAIL
    # email = 

[alias]
    b = branch -avv
    t = tag
    d = diff
    ds = diff --staged
    ci = commit -v
    co = checkout
    stat = status
    st   = status
    wc = whatchanged --abbrev-commit --date=relative --date-order --pretty='format:%Cgreen%h %Cblue%ar %Credby %an%Creset -- %s' -n 45
    logp = !GIT_PAGER='less -n +/^commit: ' git log --color --patch-with-stat
    logs = !GIT_PAGER='less -n +/^commit: ' git log --stat --no-merges
    glog = log --graph --all --branches --date-order
    oglog = log --oneline --graph --all --branches --date-order
    meld = difftool -t meld
    unstage = reset HEAD --

[format]
    pretty=%C(yellow)commit: %h%Cblue%d%Creset%nAuthor: %an%nDate:   %ad%n%n     %s%n

[merge]
    tool = meld

[mergetool]
    prompt = false

[diff]
    renames = true

[color]
    ui = true
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = blue
    frag = magenta
    old = red
    new = green

[color "status"]
    added = green
    changed = magenta
    untracked = reverse

[apply]
    whitespace = nowarn

[pack]
    threads = 0

[blame]
    date = relative

[tig]
    show-rev-graph = yes
    show-refs = yes
    line-graphics = yes

[tig "bind"]
    generic = G !echo
    stage = G !echo
    main = G !echo

[tig "color"]
    author = green default normal
